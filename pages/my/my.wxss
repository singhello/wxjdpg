/* pages/my/my.wxss */
page {
    height: 100%; 
    background: #f4f4f4;
 }
 .header-user {
   width: 100%;
   height: 80px;
 }
 .header-user .userImg{
   margin: 15px 20px 0 20px;
   display: inline-block;
   width: 50px;
   height: 50px;
   border-radius: 50%;
 }
 .header-user text {
   display: inline-block;
   vertical-align: top;
   margin-top: 30px;
 }
 .header-user .icon_more {
   margin-top: 35px;
 }
 .content {
   padding:10px 0 0 20px;
   height: 40px;
   border-bottom: 1px solid #e4e4e4
 }
 .content text {
   display: inline-block;
   vertical-align: top;
   margin-top: 5px;
 }
 .content .icon_more {
   margin-top: 10px;
 }
 .myorder{
   display: flex;
   justify-content: space-between;
 }
 .watchall{
   vertical-align: middle;
 }
 .watchall text{
   margin: 20rpx 20rpx 0 0;
   font-size: 28rpx;
 }