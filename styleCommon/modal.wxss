/*modal.wxss*/
.modal {
  width: 80%;
  /* height: 100px;  */
  background: #fff;
  position: relative;
  border-radius: 4px;
  overflow: hidden; 
  z-index: 9999;
}
.modal-bg{
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  bottom:0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, .7); 
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}
.modal-head {
  height: 30px;
  line-height: 30px;
  margin-top: 20px;
  text-align: center;
  font-size: 20px;
}
.modal-body {
  margin-bottom: 47px;
  padding: 10px 25px;
  color: #999;
  text-align: center;
  font-size: 16px;
}
.modal-body .body-title{
  line-height: 2;
  border-bottom: 1px solid #dedee4;
  text-align: center;
  font-size: 16px;
  color: #333;
}
.modal-body .body-title.alone {
  border-bottom: none;
  color: #999;
}
.modal-body .body-list{
  line-height: 2.2;
  font-size: 14px;
  color: #999;
}
.modal-footer {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 45px; 
  width: 100%;
  border-top: 1px solid #dedee4;
  overflow: hidden;
}
.modal-footer button {
  width: 50%;
  height: 45px !important;
  line-height: 45px !important;
  display: inline-block;
  background: #fff;
  border-radius: 0;
  border: none;
}
.modal-footer.btn3 button {
  width: 33.33%;
  font-size: 14px;
}
.modal-footer button::after {
  border-radius: 0;
  border: none;
}
.modal-footer button + button {
  border-left: 1px solid #dedee4; 
}
.btn-blue {
  color: #00a6c7;
}
.btn-green {
  color: #1aad19;
}
/* 一半弹出的modal样式 */
 .modal-half-bg {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
.modal-half {
  /* width: 100%; */
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  float: left;
  z-index: 2000;
  padding: 15px;
  background: #fff;
} 
.modal-half-body {
  max-height: 500px;
  overflow-y: auto;
}
.modal-half-close {
  position: absolute;
  right: 15px;
  top: 15px;
  width: 16px;
  height: 16px;
}

/* 获取用户信息的提示框-仿微信授权 */
.modal-promise .modal-head {
  height: 50px;
  line-height: 50px;
  margin-top: 0;
  border-bottom: 1px solid #dedee4;
}
.modal-promise .modal-body {
  padding: 30px 25px;
}