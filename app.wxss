/**app.wxss**/
/* 字体图标style */
button {
  height: 40px;
  line-height: 40px;
}
@import './styleCommon/icon.wxss';
@import './styleCommon/modal.wxss';

page {
  font-size:14px;
  color: #555555;
}
.container {
  padding: 0;
}
.bg-gray {
  background: #f4f4f4;
}
.bg-white {
  background: #fff;
}
/* .border-color {
  color: #f5f5f5;
} */
.text-gray {
  color: #aaaaaa;
}
.text-gray-dark {
  color: #686868;
}
text-blue {
  color: #00a6c7;
}
.text-orange {
  color: #ECAF93;
}
.text-red {
  color: #F74C44;
}
.input {
   border:1px solid #ddd; 
   border-radius: 5px; 
   padding: 5px;   
}
.clearfix::after,.clearfix::before {
  content: " ";
  display: table;
}
.clearfix::after {
  clear: both;
}
.btn-blue {
  color: #00a6c7;
}
.btn-green {
  color: #1aad19;
}
/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
/*空列表样式*/
.empty {
  margin: 20px 0;
  color: #999;
  text-align: center;
}
.empty image {
  width: 50px;
  height: 50px;
}
.icon_more {
  width: 8px;
  height: 12px;
  display: inline-block;
  vertical-align: top;
  float: right;
  margin-right: 10px;
}
.button-hover {
  background: rgba(0,166,199,.6);
}
input {
  color: #999;
}